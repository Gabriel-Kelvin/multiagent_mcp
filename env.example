# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values

# General
ENV=dev
SCHEDULER_TIMEZONE=UTC

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=your_email@example.com
EMAIL_TO=recipient@example.com

# Alternative SMTP Configuration (if not using SendGrid)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Supabase/PostgreSQL - Internal App Database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase Connection Strings (prefer pooler for production)
SUPABASE_POOLER_DSN=postgresql://postgres.xxxxx:password@aws-0-region.pooler.supabase.com:6543/postgres
SUPABASE_DIRECT_DSN=postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres

# Alternative PostgreSQL Connection (if not using Supabase DSN)
PGHOST=localhost
PGPORT=5432
PGDATABASE=postgres
PGUSER=postgres
PGPASSWORD=your_password

# External Data Source Configuration
DATA_DB_TYPE=postgres
DATA_DSN=postgresql://user:password@host:port/database
DATA_HOST=localhost
DATA_PORT=5432
DATA_NAME=your_database
DATA_USER=your_user
DATA_PASSWORD=your_password
DATA_TABLE=your_table_name
DATA_SSLMODE=require

# Application URLs
FRONTEND_URL=http://localhost:8011
BACKEND_URL=http://localhost:8010

# Frontend Build Variables (required for Docker build)
# These are used during the frontend Docker build process
VITE_API_BASE_URL=http://localhost:8017
VITE_SUPABASE_URL=${SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
VITE_APP_URL=http://localhost:8018

# JWT Secret (if using JWT authentication)
JWT_SECRET=your_jwt_secret_key_here

# Logging
DB_PATH=logs/app.db
LOG_FILE=logs/events.jsonl
